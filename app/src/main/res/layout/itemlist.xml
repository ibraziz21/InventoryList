<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/itemimg"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:src="@drawable/app_pic"
    android:layout_marginRight="10dp"
    />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/productnme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="18sp"
            android:textColor="@color/Buttontext1"
            />
        <TextView
            android:id="@+id/itemprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$50"
            android:textSize="16sp"
            android:layout_marginTop="3dp"
            android:textColor="#307804"
            />
        <TextView
            android:id="@+id/itemstock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 in stock"
            android:textColor="@color/Buttontext1"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/itemsku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKU: 22001"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            />

    </LinearLayout>
</LinearLayout>